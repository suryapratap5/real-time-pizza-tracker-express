<section class="container mx-auto mt-7">
    <% if (messages.success) { %>
        <h2 id="success-alert"  class="bg-green-700 text-white my-3 py-2 px-3 rounded-md">Order placed successfully</h2>
    <% } %>
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg bg-fuchsia-800">

        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400" >

                <tr>
                    <th scope="col" class="px-6 py-3">
                        Orders
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Phone
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Address
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Time
                    </th>
                    <!-- <th scope="col" class="px-6 py-3">
                        Price
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only">Edit</span>
                    </th> -->
                </tr>

            </thead>
            <tbody>
             

                <% if(orders.length)  { %>

                    <% orders.forEach(order => { %>
                       <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                           <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            <a href="/orders/<%= order._id %>"><%= order._id %></a>
                               
                           </th>
                           <td class="px-6 py-4">
                            <%= order.phone %>
                           </td>
                           <td class="px-6 py-4">
                            <%= order.address %>
                           </td>
                           <td class="px-6 py-4">
                            <%= moment(order.createdAt).format('hh:mm A') %>
                           </td>
                           <!-- <td class="px-6 py-4">
                               $2999
                           </td>
                           <td class="px-6 py-4 text-right">
                               <a href="#" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                           </td> -->
                       </tr>
                       
                    <% }); %>
                   <% } else {  %>
                       <tr>
                           <td>No orders found</td>
                       </tr>
   
                       <% }  %>              
              
            </tbody>
        </table>
    </div>
</section>
